{
  "compilerOptions": {
    "types": ["@testing-library/jest-dom"],
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src/**/*", ".storybook", "webpack.config.ts"],
  "exclude": ["node_modules", "dist"]
}
