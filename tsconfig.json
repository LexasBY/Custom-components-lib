{
  "compilerOptions": {
    "strict": false,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "ES2020",
    "jsx": "react",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["jest", "@testing-library/jest-dom"],
    "declaration": true,
    "allowJs": true
  },
  "exclude": ["node_modules/*", "dist", "./src/stories"],
  "include": [
    "src/**/*",
    "webpack.config.ts",
    ".eslintrc.js",
    "./declarations.d.ts",
    "jest.config.js"
  ]
}

